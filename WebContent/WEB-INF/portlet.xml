<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<!-- spring -->
	<portlet>
		<portlet-name>spring</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/spring-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>spring</title>
			<short-title>spring</short-title>
			<keywords>spring</keywords>
		</portlet-info>
	</portlet>
	<!-- topPage -->
	<portlet>
		<portlet-name>topPage</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/topPage-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>topPage</title>
			<short-title>topPage</short-title>
			<keywords>spring,topPage</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>html</name>
				<value>hello</value>
			</preference>
		</portlet-preferences>
	</portlet>
	<!-- envPage -->
	<portlet>
		<portlet-name>envPage</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/envPage-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>envPage</title>
			<short-title>envPage</short-title>
			<keywords>spring,envPage</keywords>
		</portlet-info>
	</portlet>
	<!-- logPage -->
	<portlet>
		<portlet-name>logPage</portlet-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>
		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/logPage-portlet.xml</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<portlet-info>
			<title>logPage</title>
			<short-title>logPage</short-title>
			<keywords>spring,logPage</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>filePath</name>
				<value>C:\GateIn-3.3.0-GA-jbossas7\standalone\log\server.log</value>
			</preference>
			<preference>
				<name>log4jPattern</name>
				<value>%d{HH:mm:ss,SSS} %-5p [%c] %m%n</value>
			</preference>
		</portlet-preferences>
	</portlet>
</portlet-app>